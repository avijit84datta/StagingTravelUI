{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "dom", "es2015" ],
    "jsx": "react-jsx", // Ensure this is set for JSX support
    "esModuleInterop": true, // Enables default imports
    "moduleResolution": "node",
    "strict": true,
    "module": "esnext",
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}